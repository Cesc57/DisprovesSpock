<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MesaJuego"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#003355"
            android:gravity="end"
            android:text="@string/puntuacion"
            android:textSize="20pt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/puntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#003355"
            android:text="@string/puntos_inicio"
            android:textSize="20pt"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgRival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Space
            android:layout_width="30dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tvLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/marcador_inicial"
            android:gravity="center"
            android:textSize="40pt"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tvGuion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guion"
            android:gravity="center"
            android:textSize="40pt"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tvVisitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/marcador_inicial"
            android:gravity="center"
            android:textSize="40pt"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibPiedra"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/piedra"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/ibPapel"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/papel"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/ibTijeras"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/tijeras"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="4dp">

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/ibLagarto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/lagarto"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/ibSpock"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/spock"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>


